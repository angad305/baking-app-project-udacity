<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>


  <style name="step_description">
    <item name="android:layout_margin">5dp</item>
    <item name="android:padding">5dp</item>
    <item name="android:background">@color/step_description_background</item>
    <item name="fontFamily">sans-serif-light</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textColor">@color/step_description_text</item>
    <item name="android:textSize">18sp</item>

  </style>

  <style name="angad_udacity">
    <item name="android:paddingTop">10dp</item>
    <item name="android:text">@string/angad</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="main_page_recycler">
<item name="android:layout_centerVertical">true</item>
    <item name="fontFamily">sans-serif-thin</item>
    <item name="paddingStart">25dp</item>
    <item name="paddingEnd">5dp</item>
    <item name="android:text">@string/alooBhaji</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    <item name="android:textSize">24sp</item>
    <item name="android:typeface">sans</item>


  </style>
</resources>
